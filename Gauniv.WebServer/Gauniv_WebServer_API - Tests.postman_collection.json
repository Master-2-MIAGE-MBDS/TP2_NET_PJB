	"item": [
		{
			"name": "Auth - Login (obtenir JWT)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"  var json = pm.response.json();",
							"  var token = json.Token || json.token || json.tokenValue || json.accessToken || json.AccessToken;",
							"  if (token) {",
							"    pm.environment.set('token', token);",
							"    pm.test('Token saved', function () { pm.expect(pm.environment.get('token')).to.not.be.undefined; });",
							"  } else {",
							"    pm.test('No token in response', function () { pm.expect(token).to.not.be.undefined; });",
							"  }",
							"} catch (e) {",
							"  pm.test('Response JSON parse error', function () { throw e; });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
