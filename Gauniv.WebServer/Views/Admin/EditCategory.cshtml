@model Gauniv.WebServer.Data.Categorie
@{
    ViewData["Title"] = "Modifier catégorie";
}
<h2>Modifier une catégorie</h2>
<form method="post" asp-action="EditCategory">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Libellé</label>
        <input asp-for="Libelle" class="form-control" />
        <span asp-validation-for="Libelle" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Enregistrer</button>
    <a class="btn btn-secondary" href="@Url.Action("Index","Admin", new { section = "categories" })">Annuler</a>
</form>

